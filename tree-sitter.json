{
  "$schema": "https://tree-sitter.github.io/tree-sitter/assets/schemas/config.schema.json",
  "grammars": [
    {
      "name": "lumesh",
      "camelcase": "LumeSh",
      "title": "Lumesh",
      "scope": "source.lumesh",
      "file-types": ["lm", "lume", "lumesh"],
      "injection-regex": "^lume(sh)?$",
      "class-name": "TreeSitterLumesh",
      "highlights": "queries/highlights.scm",
      "first-line-regex": "^#!.*\\b(lm|lume|lumesh)\\b.*$"
    }
  ],
  "metadata": {
    "version": "0.1.0",
    "license": "MIT",
    "description": "a lighting shell",
    "authors": [
      {
        "name": "santo",
        "url": "https://lumesh.codeberg.page/"
      }
    ],
    "links": {
      "repository": "https://codeberg.org/santo/lumesh"
    }
  },
  "bindings": {
    "c": true,
    "go": false,
    "node": true,
    "python": false,
    "rust": true,
    "swift": false,
    "zig": false
  }
}
